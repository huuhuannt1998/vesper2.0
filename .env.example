# Vesper Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (OpenWebUI API)
# =============================================================================

# OpenWebUI API endpoint
OPENWEBUI_URL=http://cci-siscluster1.charlotte.edu:8080/api/chat/completions

# OpenWebUI API key
OPENWEBUI_API_KEY=your-api-key-here

# =============================================================================
# Alternative LLM Providers (Optional)
# =============================================================================

# OpenAI API (if using directly)
# OPENAI_API_KEY=sk-...

# Anthropic API (if using Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Habitat Dataset Configuration
# =============================================================================

# Path to store downloaded datasets
HABITAT_DATA_DIR=./data

# =============================================================================
# Simulation Settings
# =============================================================================

# Enable/disable headless mode
VESPER_HEADLESS=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
VESPER_LOG_LEVEL=INFO
