# Vesper Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# LM Studio (Local - recommended for development)
# Start LM Studio -> Load a model -> Go to "Local Server" -> Start Server
OPENWEBUI_URL=http://localhost:1234/v1/chat/completions
OPENWEBUI_API_KEY=lm-studio

# OpenWebUI API (School network only)
# OPENWEBUI_URL=http://cci-siscluster1.charlotte.edu:8080/api/chat/completions
# OPENWEBUI_API_KEY=sk-a6af2053d49649d2925ff91fef71cb65

# =============================================================================
# Alternative LLM Providers (Optional)
# =============================================================================

# OpenAI API (if using directly)
# OPENAI_API_KEY=sk-...

# Anthropic API (if using Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Habitat Dataset Configuration
# =============================================================================

# Path to store downloaded datasets
HABITAT_DATA_DIR=./data

# =============================================================================
# Simulation Settings
# =============================================================================

# Enable/disable headless mode
VESPER_HEADLESS=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
VESPER_LOG_LEVEL=INFO
